---
# 
---

{% assign counter = 1 %}

{% assign items = site.data.links | sort: "title" %} 

[{% for item in items %}
{% assign cat_bg = site.data.cats | where: "cat",item.cat %}
{% for block in site.data.cats %}
  {% if block.cat == item.cat %}
    {% assign cat_ref = block.name | truncatewords: 1, ""  %}
  {% endif %}
{% endfor %}
  {  
    "title": "{{ item.title }}",
    "url": "{{ item.url }}",  
    "cat": "{{ item.cat }}",
    "cat_ref": "{{ cat_ref }}",
    "cat_bg": "{{ cat_bg[0].block }}",
    "status": "{{ item.status }}",
    "date": "{{ item.date }}"
  }{% if counter < site.data.links.size %},{% endif %}
{% assign counter = counter | plus: 1 %}
{% endfor %}]